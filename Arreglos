#include <stdio.h>
#include <stdlib.h>

int main(void) {
 int opcion, opc;
  int i, a, k, j, r, x, num;
  int nue, max;
  float aux;
  
  printf("Arreglo \n");
  printf("\nIngrese el tama√±o del arreglo: ");
  scanf("%d",&a);
  int array[a]; 
  
  for(i=0; i<a; i++) {
    printf("Ingresa la ubicacion %d : ",i );
    scanf("%d",&array[i]);
    int array[i];
    }
  
     do {
        printf("\n\nMenu de Opciones\n");
        printf("\t1. Altas\n");
        printf("\t2. Eliminar\n");
        printf("\t3. Modificar\n");
        printf("\t4. Buscar\n");
